{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "web",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "..",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev --filter=web",
    "beforeBuildCommand": "pnpm build --filter=web"
  },
  "app": {
    "windows": [
      {
        "title": "web",
        "width": 1350,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": false,
        "center": true,
        "devtools": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --enable-unsafe-webgpu"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}